<% if @messages %>
<h3 class="thread"><%= @user1.fname %> and <%= @user2.fname %> </h3>

  <ul class="thread-messages">
    <% @messages.each do |message| %>

      <li class="message group" data-user-id="<%= message.sender.id %>">

        <img src="<%= message.sender.avatar.url(:thumb) %>" class="avatar-thread">
        <p><%= message.body %></p>
        <time class="time-ago"><%= "#{ time_ago_in_words(message.created_at) } ago." %></time>
        <br><br>

      </li>

    <% end %>
  </ul>
<% end %>



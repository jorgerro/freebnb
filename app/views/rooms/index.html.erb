  <script>
  var map = L.mapbox.map('all-rooms-map', 'jorgerro.i3fn8jnl')
          .setView([35.532226, -7.910156], 2);

  var myLayer = L.mapbox.featureLayer().addTo(map);

  // The GeoJSON representing the two point features

  var geoJson = {
      type: 'FeatureCollection',
      features: [

      <% @listings.each do |room| %>

      {
          type: 'Feature',
          properties: {
              title: '<%=  "#{ room.display_title }"  %>',
              'marker-color': '#f00',
              'marker-size': 'medium',
              'marker-color': '#CA16C2',
              'marker-symbol': '',
              url: '<%= room_url(room) %>'
          },
          geometry: {
              type: 'Point',
              coordinates: [<%=  room.longitude  %>, <%=  room.latitude  %>]
          }
      },

      <% end %>

      {
          type: 'Feature',
          properties: {
              title: 'Baltimore, MD',
              'marker-color': '#CA16C2',
              'marker-size': 'medium',
              url: 'http://en.wikipedia.org/wiki/Baltimore'
          },
          geometry: {
              type: 'Point',
              coordinates: [-76.60767, 39.28755]
          }
      }


    ]
  };

  // Pass features and a custom factory function to the map
  myLayer.setGeoJSON(geoJson);
  myLayer.on('click', function(e) {
      // e.layer.unbindPopup();
      window.location.href = e.layer.feature.properties.url
  });
  </script>







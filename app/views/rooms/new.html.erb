<h2>List Your Place</h2>

<form action="<%= rooms_url %>" method="post">
  <%= auth_token %>

  <input type="hidden" name="room[owner_id]" value="<%= current_user.id %>">

  <label>
    <select name="room[address_region]">
      <option value="">Choose a Region</option>
      <option value="north_america">North America</option>
      <option value="hawaii">Hawaii</option>
      <option value="europe">Europe</option>
      <option value="east_asia">East Asia</option>
      <option value="south_america">South America</option>
    </select>
  </label>

  <br>

  <label for="city">City</label>
  <input type="text" name="room[address_city]" value="" id="city">


<br><br>

  <label for="country">Country</label>
  <input type="text" name="room[address_country]" value="" id="country">

<br><br>

  <label for="home_type">Home Type</label>
  <input type="text" name="room[home_type]" value="" id="home_type">


<br><br>

  Room Type: <br><br>
  <label>
    Entire House / Apt.
    <input type="radio" name="room[room_type]" value="entire_space">
  </label>
  <label>
    Private Room
    <input type="radio" name="room[room_type]" value="private_room">
  </label>
  <label>
    Shared Room
    <input type="radio" name="room[room_type]" value="shared_room">
  </label>

<br>

  <label>
    Number of Guests
    <select name="room[num_possible_guests]">
      <option value=""></option>
      <% (1..10).to_a.each do |num|  %>
        <option value="<%= num %>"><%= num %></option>
      <% end %>
    </select>
  </label>
  <br><br>

  <p><input type="submit" value="Create Your Listing!"></p>
</form>
